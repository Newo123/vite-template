{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2015",
    "isolatedModules": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
  "exclude": ["dist", "build", "node_modules"],
  "include": ["./src/"],
}
